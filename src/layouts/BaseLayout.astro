---
export interface Props {
  title: string;
  description?: string;
  keywords?: string;
}

const { title, description = "Get an AI-powered professional website that converts visitors into customers. Modern AI-enhanced web development and intelligent SEO services for Southwest Michigan businesses.", keywords = "AI web development Michigan, AI website design, artificial intelligence web development, AI-powered SEO, smart website development, AI business solutions, machine learning web development, automated SEO Michigan, AI development Southwest Michigan, intelligent web design" } = Astro.props;
---

